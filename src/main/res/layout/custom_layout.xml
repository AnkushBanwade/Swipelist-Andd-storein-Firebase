    <EditText
        android:id="@+id/Name"
        android:layout_marginTop="7dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/borfrt"
        android:paddingBottom="5dp"
android:paddingTop="5dp"
        android:layout_marginBottom="10dp"
        android:hint="       Name"
        android:textColor="#0E0C0C"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/Address"

        android:background="@drawable/borfrt"
        android:layout_width="250dp"
        android:paddingTop="5dp"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="       Address"
        android:textColor="#0E0C0C"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/No"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:background="@drawable/button_states"
            android:backgroundTint="#E92D6D"
            android:drawableStart="@drawable/crossedit"
            android:icon="@drawable/crossedit"
            android:src="@drawable/crossedit"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/Yes"
            android:layout_width="35dp"

            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@drawable/button_states"
            android:scaleType="centerCrop"
            android:backgroundTint="#58E05D"
            android:icon="@drawable/edit"
            android:src="@drawable/ic_check_black_24dp"
            android:textColor="#ffffff" />

